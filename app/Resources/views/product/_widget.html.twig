<div class="price-quantity">
    {% if declination.crossedoutprice %}
        <div class="big-title text-blue" style="display:inline">{{ declination.pricewithoutvat|price }} HT</div>
        <div class="badge-promo">PROMO</div>
        <div class="text-blue">Au lieu de : {{ declination.crossedoutprice|price }} HT</div>
    {% else %}
        <div class="big-title text-blue">{{ declination.priceWithoutVat|price }} HT</div>
    {% endif %}

    <div>Eco taxe&nbsp;: {{ declination.greenTax|price }} </div>

    {# options selector #}
    <h4>{{ 'options'|trans }} :</h4>

    <ul class="options">
        {% for option in product.options  %}
            <li class="option-name">{{ option.name }}
                <select title="{{ 'select' }}" data-id="{{ option.id }}" @change="updateDeclination">
                    {% for variant in option.variants %}
                        <option value="{{ variant.id }}">{{ variant.name }}</option>
                    {% endfor %}
                </select>
            </li>
        {% endfor %}
    </ul>


    {# add to basket #}
    <div class="basket-widget">
        <p class="label">Quantit√©</p>
        <div class="quantity-widget">
            <input type="number" aria-label="Text input with multiple buttons" class="form-control" :value="quantity" v-model="quantity" {% if not inStock %}disabled="disabled"{% endif %}>
            <button class="btn btn-default" type="button" @click="decreaseQuantity" {% if not inStock %}disabled="disabled"{% endif %}> - </button>
            <button class="btn btn-default" type="button" @click="increaseQuantity" {% if not inStock %}disabled="disabled"{% endif %}> + </button>
        </div>
        <div class="spacer"></div>

        {% if inStock %}
            <button class="btn btn-primary btn-lg" type="button" @click="submitBasket">Ajouter au panier</button>
        {% else %}
            <button class="btn btn-primary btn-lg" type="button" disabled>Rupture de stock</button>
        {% endif %}
    </div>
</div>
