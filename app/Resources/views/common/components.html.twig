{# display page wide overlay by adding class 'in' #}
<div id="overlay"></div>

{# notifications #}
<div class="notifications">
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible" data-dismiss="alert">
                <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
                <span>{{ message }}</span>
            </div>
        {% endfor %}
    {% endfor %}
</div>
